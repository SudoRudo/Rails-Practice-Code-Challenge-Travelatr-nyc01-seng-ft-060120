<h1><%= @post.title %></h1>
<% blogger = @post.blogger %>
<p>By: <%=link_to blogger.name, blogger_path %></p>
<% destination = @post.destination%>
<p><%= link_to destination.name, destination_path %></p>
<p><%=  @post.content %></p>
<%= button_to "Like", post_path(@post), method: :like %>
Likes: <%= @post.likes %>